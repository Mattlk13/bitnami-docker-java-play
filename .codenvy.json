{
  "v": "4.0",
  "workspace": {
    "name": "play",
    "defaultEnv": "play",
    "environments": [
      {
        "name": "play",
        "recipe": null,
        "machineConfigs": [
          {
            "name": "ws-machine",
            "limits": {
              "ram": 1024
            },
            "source": {
              "type": "image",
              "location": "bitnami/java-play:che"
            },
            "type": "docker",
            "dev": true
          }
        ]
      }
    ],
    "projects": [
      {
        "name": "play-sample",
        "type": "java",
        "path": "/play-sample",
        "source": {
          "type": "git",
          "location": "https://github.com/bitnami/bitnami-docker-java-play.git",
          "parameters": {
            "branch": "che",
            "keepVcs": "true"
          }
        },
        "mixins": [
          "git",
          "pullrequest"
        ],
        "attributes": {
          "local_branch": [ "contrib" ],
          "contribute_to_branch" : [ "master" ]
        },
        "modules": [],
        "problems": []
      }
    ],
    "commands": [
      {
        "name": "run first",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && cd ${current.project.path}/app_template && activator run -Dhttp.port=9000 -Dhttp.host=0.0.0.0",
        "attributes": {
           "previewUrl": "http://${server.port.9000}/"
        }
      },
      {
        "name": "create project",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && if [ -d ${current.project.path} ] ; then cd ${current.project.path} ; fi && activator new app_template play-java",
        "attributes": {}
      }
    ]
  },
  "ide": {
    "onProjectsLoaded": {
      "actions": [
        {
          "properties": {
            "name": "create project"
          },
          "id": "runCommand"
        }
      ]
    }
  }
}

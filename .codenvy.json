{
  "v": "4.0",
  "workspace": {
    "name": "play",
    "defaultEnv": "play",
    "environments": [
      {
        "name": "play",
        "recipe": null,
        "machineConfigs": [
          {
            "name": "ws-machine",
            "limits": {
              "ram": 1024
            },
            "source": {
              "type": "image",
              "location": "bitnami/che-java-play:che-2.55-r3"
            },
            "type": "docker",
            "dev": true
          }
        ]
      }
    ],
    "projects": [
      {
        "name": "play-sample",
        "type": "javac",
        "path": "/play-sample",
        "source": {
          "type": "git",
          "location": "https://github.com/bitnami/bitnami-docker-che-blank-sample",
          "parameters": {
            "keepVcs": "false"
          }
        },
        "mixins": [
          "pullrequest"
        ],
        "attributes": {
          "local_branch": [ "contrib" ],
          "contribute_to_branch" : [ "master" ]
        },
        "modules": [],
        "problems": []
      }
    ],
    "commands": [
      {
        "name": "2. Run",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && cd ${current.project.path} && /opt/bitnami/activator/bin/activator -Doffline=true -Dhttp.host=0.0.0.0 -Dhttp.port=9000 -Dsbt.log.noformat=true ~run",
        "attributes": {
           "previewUrl": "http://${server.port.9000}/"
        }
      },
      {
        "name": "1. Create project",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && sudo HOME=/root /opt/bitnami/nami/bin/nami execute activator createProject --force play-sample play-java | grep -v undefined && cd ${current.project.path} && /opt/bitnami/activator/bin/activator -Dsbt.log.noformat=true -Doffline=true -Dhttp.host=0.0.0.0 -Dhttp.port=9000 ~run",
        "attributes": {
           "previewUrl": "http://${server.port.9000}/"
        }
      },
      {
        "name": "3. Stop",
        "type": "custom",
        "commandLine": "source /opt/bitnami/stacksmith-utils.sh && print_welcome_page && cd ${current.project.path} && pkill -u bitnami activator && echo \"Web server stopped.\"",
        "attributes": {}
      }
    ]
  },
  "ide": {
    "onProjectsLoaded": {
      "actions": [
        {
          "properties": {
            "name": "1. Create project"
          },
          "id": "runCommand"
        }
      ]
    }
  }
}
